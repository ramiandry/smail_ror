<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>SB Admin 2 - Register</title>

    <!-- Custom fonts for this template-->
    <link href="/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="/css/sb-admin-2.min.css" rel="stylesheet">

</head>

<body class="bg-gradient-primary">

    <div class="container">

        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
                <div class="row">
                    <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                    <div class="col-lg-7">
                        <div class="p-5">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
                            </div>
                            <div class="user">
                                <%= form_with model: @utilisateur do |f| %>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                        <%= f.text_field :prenom, class:"form-control form-control-user", id:"exampleFirstName", placeholder:"PrÃ©noms" %>

                                    </div>
                                    <div class="col-sm-6">
                                        <%= f.text_field :nom, class:"form-control form-control-user", id:"exampleLastName",placeholder:"Nom" %>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <%= f.text_field :email, type:"email", class:"form-control form-control-user", id:"email", placeholder:"email@smail.com"%>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-6 mb-3 mb-sm-0">
                                    <%= f.text_field :password_digest, type:"password", class:"form-control form-control-user",id:"exampleInputPassword", placeholder:"Password"%>
                                    </div>
                                    <div class="col-sm-6">
                                    <%= f.text_field :password, type:"password", class:"form-control form-control-user",id:"exampleInputPassword", placeholder:"Repeat Password"%>
                                    </div>
                                    <span id="spanhelper" style="color: red; text-align: center; width: 100% !important;">Le mot de passe entrer ne correspond pas</span>
                                </div>
                                <%= f.button :submit, value:"Register Account", class: "btn btn-primary btn-user btn-block btn-submit" %>

                                <hr>
                                <% end %>
                                
                            </div>
                            <hr>
                            <div class="text-center">
                                <a class="small" href="forgot-password.html">Forgot Password?</a>
                            </div>
                            <div class="text-center">
                                <a class="small" href="login.html">Already have an account? Login!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="/vendor/jquery/jquery.min.js"></script>
    <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="/js/sb-admin-2.min.js"></script>
    <script>
        document.getElementById("exampleLastName").addEventListener("keyup",addEmail);
        document.getElementById("exampleFirstName").addEventListener("keyup",addEmail);;
        document.querySelectorAll('input[type="password"]')[1].addEventListener("keyup",validate);;
        document.getElementById("spanhelper").style.display="none"
        document.getElementById("utilisateur_submit").disabled=true;


        function addEmail(){
            var nom=document.getElementById("exampleFirstName").value;
            var prenom=document.getElementById("exampleLastName").value;
            document.getElementById("email").value= (nom+prenom+"@smail.com").toLowerCase();
            
        }
        function validate(){
            var nom=document.getElementById("exampleFirstName").value;
            var mdp=document.querySelectorAll('input[type="password"]');
            if(mdp[0].value!=mdp[1].value){
                document.getElementById("utilisateur_submit").disabled=true;
                document.getElementById("spanhelper").style.display="block"
            }else{
                document.getElementById("spanhelper").style.display="none"
                document.getElementById("utilisateur_submit").disabled=false;
            if(nom==null){
                document.getElementById("utilisateur_submit").disabled=false;
            }
            }
        }
    </script>

</body>

</html>